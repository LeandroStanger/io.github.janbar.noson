{
  "app-id": "io.github.janbar.noson",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.12",
  "sdk": "org.kde.Sdk",
  "command": "noson-app",
  "rename-icon": "noson",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network",
    "--device=dri",
    "--filesystem=xdg-music",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.mpris.MediaPlayer2.Player",
    "--own-name=org.mpris.MediaPlayer2.noson.*",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/aclocal",
    "/share/doc",
    "/share/gtk-doc",
    "/share/info",
    "/share/man",
    "/share/pkgconfig",
    "/lib/cmake",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "noson",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/janbar/noson-app/archive/3.16.1.tar.gz",
          "sha256": "220d07fd9575079ba0a369e412e2490aa947865f55e5585ceafad9f1f75dd0a5"
        }
      ]
    }
  ]
}
