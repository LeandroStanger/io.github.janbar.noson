{
  "app-id": "io.github.janbar.noson",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.11",
  "sdk": "org.kde.Sdk",
  "command": "noson-app",
  "rename-icon": "noson",
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--device=dri",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:ro",
    "--talk-name=ca.desrt.dconf",
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/share/aclocal",
    "/share/doc",
    "/share/gtk-doc",
    "/share/info",
    "/share/man",
    "/share/pkgconfig",
    "/lib/cmake",
    "*.la",
    "*.a"
  ],
  "build-options": {
    "cflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "cxxflags": "-O2 -g -fstack-protector-strong -D_FORTIFY_SOURCE=2",
    "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now",
    "env": {
      "V": "1"
    }
  },
  "modules": [
    {
      "name": "noson",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/janbar/noson-app/archive/3.9.1.tar.gz",
          "sha256": "bab29225e02614268d315d988596652ef56ab035c4e0b83d92c90276f2dd179a"
        }
      ]
    }
  ]
}
